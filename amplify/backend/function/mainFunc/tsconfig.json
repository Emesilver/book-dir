{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "target": "ES2021",
      "module": "commonjs",
      "moduleResolution": "node",
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "outDir": "./src",
      "baseUrl": "./",
      "rootDir": "./ts",
      "typeRoots": ["./src/node_modules/@types"],
      "paths": {
        "src": ["./ts"],
        "*": ["./src/node_modules/*"]
      }
    }
}
